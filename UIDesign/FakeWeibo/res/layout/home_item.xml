<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="#F4F1F4"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFEFF"
            >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                >

            <ImageView
                    android:id="@+id/touxiang_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/portrait"
                    />

            <TextView
                    android:id="@+id/name"
                    android:layout_toRightOf="@id/touxiang_img"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:textColor="#737373"
                    android:gravity="center_vertical"
                    />

            <TextView
                    android:layout_toRightOf="@id/touxiang_img"
                    android:layout_below="@id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="刚刚 来自人民微管家"
                    android:paddingLeft="10dp"
                    android:textSize="10sp"
                    android:textColor="#737373"
                    android:gravity="center_vertical"
                    />

            <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/market_icon_arrow_down"
                    />

            <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/touxiang_img"
                    android:paddingTop="20dp"
                    android:textColor="#737373"
                    android:lineSpacingExtra="10dp"
                    android:textSize="15sp"
                    />

            <ImageView
                    android:id="@+id/peitu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/neirong"
                    android:layout_below="@id/content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
        </RelativeLayout>


        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F4F1F4"
                ></View>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/activity_card_write"
                        android:layout_gravity="center_vertical"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"
                        />
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_gravity="center_vertical"
                    />

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"

                    >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/statusdetail_icon_comment"
                        android:layout_gravity="center_vertical"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:paddingLeft="5dp"
                        android:layout_gravity="center_vertical"
                        />

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_gravity="center_vertical"
                    />

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/statusdetail_icon_like"
                        android:layout_gravity="center_vertical"
                        />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:paddingLeft="5dp"
                        android:layout_gravity="center_vertical"
                        />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>